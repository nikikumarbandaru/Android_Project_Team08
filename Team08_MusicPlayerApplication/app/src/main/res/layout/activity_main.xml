<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/lmView"
        android:layout_width="208dp"
        android:layout_height="0dp"
        android:onClick="sendOnClick"
        android:src="@drawable/lm"
        app:layout_constraintBottom_toBottomOf="@+id/spbView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/spbView"
        app:layout_constraintTop_toBottomOf="@+id/favView" />

    <ImageView
        android:id="@+id/spbView"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="195dp"
        android:onClick="sendOnClick"
        android:src="@drawable/spb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lmView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rahmanView" />

    <TextView
        android:id="@+id/AppName"
        android:layout_width="406dp"
        android:layout_height="0dp"
        android:text="AppName"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rahmanView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/favView"
        android:layout_width="202dp"
        android:layout_height="0dp"
        android:onClick="sendOnClick"
        android:src="@drawable/images"
        app:layout_constraintBottom_toTopOf="@+id/spbView"
        app:layout_constraintEnd_toStartOf="@+id/rahmanView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AppName" />

    <ImageView
        android:id="@+id/rahmanView"
        android:layout_width="208dp"
        android:layout_height="0dp"
        android:onClick="sendOnClick"
        app:layout_constraintBottom_toTopOf="@+id/spbView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/favView"
        app:layout_constraintTop_toBottomOf="@+id/AppName"
        app:srcCompat="@drawable/rahman" />

</androidx.constraintlayout.widget.ConstraintLayout>